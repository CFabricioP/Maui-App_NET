<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.UTN.CP.Paginas.Inicio"
             Title="Inicio">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Green"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Label x:Name="lblText" Text="Inicio"></Label>
        <Button x:Name="btnProdcutos" Text="Productos" Clicked="btnProdcutos_Clicked"></Button>
        <Button x:Name="btnCategorias" Text="Categorias" Clicked="btnCategorias_Clicked"></Button>
        <Label x:Name="lblTextAutor" Text="Autor: Carlos Pozo"></Label>

    </VerticalStackLayout>
</ContentPage>